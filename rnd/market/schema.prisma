datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider               = "prisma-client-py"
  recursive_type_depth   = 5
  interface              = "asyncio"
  previewFeatures        = ["fullTextSearch"]
  partial_type_generator = "market/utils/partial_types.py"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id   String   @id // This should match the Supabase user ID
  role UserRole @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  Agents Agents[]
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}

model Agents {
  id      String @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  version Int    @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  submissionDate           DateTime         @default(now())
  submissionReviewDate     DateTime?
  submissionStatus         SubmissionStatus @default(PENDING)
  submissionReviewComments String?

  name        String?
  description String?
  author      String?

  keywords   String[]
  categories String[]
  search     Unsupported("tsvector")? @default(dbgenerated("''::tsvector"))

  graph            Json
  AnalyticsTracker AnalyticsTracker[]
  FeaturedAgent    FeaturedAgent?

  @@id(name: "graphVersionId", [id, version])
}

model AnalyticsTracker {
  id        String @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  agentId   String @unique @db.Uuid
  agent     Agents @relation(fields: [agentId], references: [id])
  views     Int
  downloads Int
}

model FeaturedAgent {
  id          String  @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  agentId     String  @unique @db.Uuid
  agent       Agents  @relation(fields: [agentId], references: [id])
  is_featured Boolean @default(false)
  category    String  @default("featured")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
